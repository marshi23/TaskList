<% if @task.nil? %>
  <h1> 404 Not Found </h1>
<% else %>
  <h2>Task Details:</h2>

  <p>Name: <%=@task.name %></p>
  <p>Details: <%=@task.description %></p>
  <p>Status: <%=@task.status %></p>
  <p>Expected Completion: <%=@task.completion_date %></p>
  <!-- <a href="">Delete Task</a> -->
  <% end %>

  <%= link_to "Edit #{@task.name}", edit_task_path(@task.id)%>
